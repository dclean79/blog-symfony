{% extends 'base.html.twig' %}
{% block title %}My Posts{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2 class="mb-3">My Posts</h2>

    <!-- Przycisk dodawania nowego posta z ikoną + tooltipem -->
    <a href="{{ path('author_post_new') }}"
       class="btn btn-success mb-3"
       data-bs-toggle="tooltip" data-bs-placement="right" title="Add new post">
        <i class="bi bi-file-earmark-plus"></i>
    </a>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Title</th>
                        <th>Slug</th>
                        <th>Published</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for post in posts %}
                        <tr>
                            <td>{{ post.title }}</td>
                            <td>{{ post.slug }}</td>
                            <td>
                                <form method="post" action="{{ path('author_post_toggle_publish', {id: post.id}) }}">
                                    <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ post.id) }}">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox"
                                            onchange="this.form.submit()"
                                            {{ post.isPublished ? 'checked' : '' }}>
                                    </div>
                                </form>
                            </td>
                            <td>
                                <!-- Edycja -->
                                <a href="{{ path('author_post_edit', {id: post.id}) }}"
                                   class="btn btn-sm btn-primary me-1"
                                   data-bs-toggle="tooltip" data-bs-placement="top" title="Edytuj post">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <!-- Usuwanie -->
                                <form method="post" action="{{ path('author_post_delete', {id: post.id}) }}" style="display:inline"
                                      onsubmit="return confirm('Czy na pewno chcesz usunąć ten post?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                                    <button class="btn btn-sm btn-danger"
                                            data-bs-toggle="tooltip" data-bs-placement="top" title="Usuń post">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center">Brak postów</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
