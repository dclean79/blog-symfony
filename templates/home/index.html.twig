<div class="row">
    {% for post in latestPosts %}
        <div class="col-md-6">
            <div class="card mb-3 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">{{ post.title }}</h5>
                    <p class="card-text">
                        {{ post.contentMarkdown|slice(0, 120) ~ '...' }}
                    </p>
                    <a href="{{ path('post_show', {slug: post.slug}) }}" class="btn btn-outline-primary">
                        Read more...
                    </a>
                </div>
            </div>
        </div>
    {% else %}
        <div class="col-12 text-center">
            <p>No posts published.</p>
        </div>
    {% endfor %}
</div>
{% endblock %}
