{% extends 'base.html.twig' %}
{% block title %}{{ post.title }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2>{{ post.title }}</h2>
    <p class="text-muted">
        Autor: {{ post.author.email }} |
        Data: {{ post.createdAt|date('Y-m-d H:i') }}
    </p>
    <hr>
    <div>
        {{ post.contentMarkdown|raw }}
    </div>
    <a href="{{ path('post_list') }}" class="btn btn-secondary mt-3">← Powrót do listy</a>
</div>
{% endblock %}
