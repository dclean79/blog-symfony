{% extends 'base.html.twig' %}
{% block title %}Posty{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2 class="mb-3">Opublikowane posty</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Tytuł</th>
                        <th>Autor</th>
                        <th>Data</th>
                    </tr>
                </thead>
                <tbody>
                    {% for post in posts %}
                        <tr>
                            <td>
                                <a href="{{ path('post_show', {slug: post.slug}) }}">
                                    {{ post.title }}
                                </a>
                            </td>
                            <td>{{ post.author.email }}</td>
                            <td>{{ post.createdAt|date('Y-m-d H:i') }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center">Brak opublikowanych postów</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
